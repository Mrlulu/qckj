size ={
  def:15px,
  xs:5px,
  sm:10px,
  lg:20px,
  xl:30px
}
for key,val in size
  $key = key!=def?('-'+key):''
  .padding{$key}
    padding:val
    &-top
      padding-top:val
    &-bottom
      padding-bottom:val
    &-left
      padding-left: val
    &-right
      padding-right:val
    &-tb
      padding:val 0
    &-lr
      padding:0 val
  .margin{$key}
    margin:val
    &-top
      margin-top:val
    &-bottom
      margin-bottom:val
    &-left
      margin-left: val
    &-right
      margin-right:val
    &-tb
      margin:val 0
    &-lr
      margin:0 val
